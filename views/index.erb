<form action="/subscribe" method="post" accept-charset="utf-8">
<section id="project-description">
  <div class="row">
    <div class="span6 offset3">
      <h3>Soyez automatiquement informé lorsque de nouveaux appels d'offres sont publiés sur <a target="_blank" href="https://seao.ca/">seao.ca</a></h3>
    </div>
  </div>
</section><!-- /#project-description -->

<hr>

<section id="feed-filter">

  <section id="filter-rules">

    <article class="rule">
      <div class="row">
        <div class="span5">
          <select name="filters[][category]" class="span5">
            <% @categories.each do |cat| %>
              <%= '<option>' + cat.name + '</option>' %>
            <% end %>
          </select>
        </div>

        <div class="span3">
          <select name="filters[][type]" class="span3">
            <option value="include">Inclure</option>
            <option value="exclude">Exclure</option>
          </select>
        </div>

        <div class="span4">
          <input name="filters[][keyword]" class="span4" type="text" placeholder="Mot-clés (ex: imprimantes, serveurs, switch)">
        </div>
      </div>
    </article>

    <div class="row">
      <div class="span2 offset10">
        <a href="" class="btn btn-small pull-right">Ajouter un critère</a>
      </div>
    </div>

  </section><!-- /#filter-rules -->
  
</section><!-- /#feed-filter -->

<section id="subscriber">
  <div class="row">
    <div class="span4 offset2">
      <h3>Option A</h3>
      <p>Envoyer un courriel à...</p>
      <div class="control-group">
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-envelope"></i></span>
            <input name="email" id="email" class="span3 input-large" id="inputIcon" type="text" placeholder="john@pme.ca">
          </div>
        </div>
      </div>
      <p>chaque fois qu'un nouvel appel d'offres correspondra aux critères sélectionnés.</p>
      <input type="submit" value="Confirmer" class="btn btn-primary">
    </div>

    <div class="span6">
      <h3>Option B</h3>
      <p>S'abonner via un flux RSS</p>
      <p><code>http://www.seaoo.ca?categorie&contient=tag1&tag2&tag3</code></p>
      <p>qui contiendra uniquement les appel d'offres correspondra aux critères sélectionnés.</p>
    </div>
  </div>
</section><!-- /#subscriber -->
</form>
